
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SpecDataType {
  STRING
  NUMBER
  BOOLEAN
  ENUM
}

model Category {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique

  parentId  String?   @map("parent_id")
  isActive  Boolean   @default(true)

  createdAt DateTime  @default(now())

  parent    Category?  @relation("CategoryTree", fields: [parentId], references: [id],onDelete: Cascade,onUpdate: Cascade)
  children  Category[] @relation("CategoryTree")

  products       Product[]
  specifications CategorySpecification[]

  @@index([parentId])
}

model CategorySpecification {
  id         String   @id @default(uuid())
  categoryId String

  key        String   // color, size, ram
  type       SpecDataType
  required   Boolean  @default(true)
  isVariant  Boolean  @default(false)

  createdAt DateTime @default(now())

  category Category @relation(fields: [categoryId], references: [id],onDelete: Cascade,onUpdate: Cascade)
  productSpecifications ProductSpecification[]
  variantSpecifications VariantSpecification[] 

  @@unique([categoryId, key])
  @@index([categoryId])
}

model Product {
  id         String   @id @default(uuid())
  shopId     String
  categoryId String

  name       String
  slug       String   @unique
  brand      String?

  basePrice     Decimal @db.Decimal(10,2)
  discountPrice Decimal? @db.Decimal(10,2)

  isActive   Boolean  @default(true)
  stock      Int      @default(0)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  category       Category @relation(fields: [categoryId], references: [id],onDelete: Cascade,onUpdate: Cascade)
  variants       ProductVariant[]
  specifications ProductSpecification[] 
  images         ProductImage[]
  reviews        ProductReview[]

  @@index([categoryId])
  @@index([shopId])
}

model ProductVariant {
  id        String   @id @default(uuid())
  productId String

  sku       String   @unique
  price     Decimal  @db.Decimal(10,2)
  stock     Int      @default(0)

  createdAt DateTime @default(now())

  product        Product @relation(fields: [productId], references: [id],onDelete: Cascade,onUpdate: Cascade)
  specifications VariantSpecification[]

  @@index([productId])
}

model ProductSpecification {
  id              String   @id @default(uuid())
  productId       String
  specificationId String

  value           String   // stored dynamically

  createdAt DateTime @default(now())

  product       Product @relation(fields: [productId], references: [id],onDelete: Cascade,onUpdate: Cascade)
  specification CategorySpecification @relation(fields: [specificationId],references: [id],onDelete: Cascade,onUpdate: Cascade)

  @@unique([productId, specificationId])
  @@index([productId])
}

model VariantSpecification {
  id              String   @id @default(uuid())
  variantId       String
  specificationId String

  value           String

  createdAt DateTime @default(now())

  variant       ProductVariant @relation(fields: [variantId], references: [id],onDelete: Cascade,onUpdate: Cascade)
  specification CategorySpecification @relation(fields: [specificationId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([variantId, specificationId])
  @@index([variantId])
}

model ProductImage {
  id        String   @id @default(uuid())
  productId String

  imageUrl  String
  isPrimary Boolean @default(false)
  sortOrder Int     @default(0)

  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id],onDelete: Cascade,onUpdate: Cascade)

  @@index([productId])
}

model ProductReview {
  id        String   @id @default(uuid())
  productId String
  userId    String

  rating    Int
  comment   String?

  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id],onDelete: Cascade,onUpdate: Cascade)

  @@index([productId])
  @@index([rating])
}

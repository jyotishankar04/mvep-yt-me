generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  USER
  ADMIN
}

enum SellerStatus {
  INIT
  SETUP
  CONNECT
  ACTIVE
  SUSPENDED
}

enum SessionStatus {
  ACTIVE
  REVOKED
  EXPIRED
}

enum DeviceType {
  MOBILE
  DESKTOP
  TABLET
  WEB
}

model User {
  id        String   @id @default(ulid())
  name      String
  email     String   @unique
  password  String?
  role      UserRole @default(USER)
  isVerified Boolean @default(false)

  sessions  UserSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Seller {
  id        String       @id @default(ulid())
  name      String
  email     String       @unique
  password  String
  phoneNo   String
  country   String
  stripeId  String?

  status    SellerStatus @default(INIT)

  sessions  SellerSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model UserSession {
  id        String        @id @default(ulid())
  userId    String
  status    SessionStatus @default(ACTIVE)

  ipAddress String?
  userAgent String?

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceSessions DeviceSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, status])
}


model SellerSession {
  id        String        @id @default(ulid())
  sellerId  String
  status    SessionStatus @default(ACTIVE)

  ipAddress String?
  userAgent String?

  seller         Seller          @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  deviceSessions DeviceSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sellerId, status])
}


model RefreshToken {
  id        String   @id @default(ulid())
  sessionId String
  tokenHash String   @unique
  expiresAt DateTime

  createdAt DateTime @default(now())

  @@index([sessionId])
}


model DeviceSession {
  id String @id @default(ulid())

  userSessionId   String?
  sellerSessionId String?

  deviceId   String
  deviceType DeviceType
  ipAddress  String
  userAgent  String

  isTrusted    Boolean  @default(false)
  lastActiveAt DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userSession   UserSession?   @relation(fields: [userSessionId], references: [id], onDelete: Cascade)
  sellerSession SellerSession? @relation(fields: [sellerSessionId], references: [id], onDelete: Cascade)

  @@index([userSessionId])
  @@index([sellerSessionId])
  @@index([deviceId])
}
